<div class="jm-header @@header-fixed">
    <div class="jm-wrapper">
         <div class="header-left-box">
               <i class="@@header-left-icon-style"></i>
          </div>
        <div class="header-center-box @@header-mid-style">
         <p class="title">@@title</p>
         <div class="search-box">
            <form action="#" method="" class="search-form">
               <div class="inner-box">
                <input type="search" name="search-form-content" placeholder="输入搜索内容" autocomplete="off" class="search-form-item">
                <button type="submit" class="search-sub-btn"><i class="icon_header_shop_search"></i></button>
                <i class="icon_header_shop_search_cancel"></i>
               </div>
            </form>
         </div>
        </div>
           <div class="header-right-box">
              <i class="icon-r @@header-right-icon-style"></i>
              <span class="text-r @@header-right-text-style">@@header-right-text</span>
           </div>
    </div>
</div>
